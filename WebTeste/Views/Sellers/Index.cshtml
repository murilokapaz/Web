
@model IEnumerable<Sellers>


@{
    ViewData["Title"] = "Sellers";
}

<h1>@ViewData["NamePage"]</h1>

<p>Sellers index page</p>

<table class="table table-striped table-hover" >
    <thead>
        <tr class="success" style="background: #c8c8ff;">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseSalary)
            </td>
            <td>
                <a asp-action="Edit" asp-rout-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-rout-id="@item.Id">Details</a>
                <a asp-action="Remove" asp-rout-id="@item.Id">Remove</a>
            </td>
        </tr>
        }
    </tbody>
</table>
